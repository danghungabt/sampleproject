<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:id="@+id/detail_pollutant_card"
    app:cardCornerRadius="10dp"
    android:background="@drawable/custom_flat_shape">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
                <TextView
                    android:id="@+id/txt_pollutant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="PM2.5"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"/>
                    <TextView
                        android:id="@+id/txt_pollutant_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.4"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_below="@id/txt_pollutant_name"/>


        <TextView
            android:id="@+id/pollutant_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="2dp"
            android:text="(\u00B5g/m\u00B3)"
            android:textSize="16dp"
            android:textStyle="italic"
            android:layout_toRightOf="@id/txt_pollutant_value"
            android:layout_below="@id/txt_pollutant_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/txt_pollutant_value"
            android:padding="2dp"
            android:layout_alignParentLeft="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At: "
                android:textColor="@color/faded_text"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/faded_text"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>